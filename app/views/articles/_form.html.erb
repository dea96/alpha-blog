<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-sm-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group row">
                <%= f.label :title, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :description, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <%= f.submit class: "btn btn-primary btn-sm" %>
                </div>
            </div>
        <% end %>

        <div class="col-xs-4 offset-xs-4">
          [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
        </div>
    </div>
</div>