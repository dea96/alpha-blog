<% if obj.errors.any? %>
    <div class="row">
        <div class="col-sm-12">
            <div class="card text-white bg-danger">
                <div class="card-header">
                    <%= pluralize(obj.errors.count, "error") %>
                    prohibited this article from being saved:
                </div>
                <div class="card-body">
                    <ol>
                        <% obj.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %> 
                    </ol>
                </div>
            </div>
        </div>
    </div>
<% end %>