<h1 align="center">Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class="col-sm-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group row">
                <%= f.label :username, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :email, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :password, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <%= f.submit "Sign up", class: "btn btn-primary btn-sm" %>
                </div>
            </div>
        <% end %>

        <div class="col-xs-4 offset-xs-4">
          [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
        </div>
    </div>
</div>