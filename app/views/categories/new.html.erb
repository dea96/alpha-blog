<h1>Create new category</h1>

<%= render 'shared/errors', obj: @category %>

        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group row">
                <%= f.label :name, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter category", autofocus: true %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <%= f.submit class: "btn btn-primary btn-sm" %>
                </div>
            </div>
        <% end %>

        <div class="col-xs-4 offset-xs-4">
          [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
        </div>