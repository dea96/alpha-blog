	<h1 align="center">Log in</h1>

	<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
		<div class="form-group row">
			<%= f.label :email, class: "col-sm-2 col-form-label" %>
			<div class="col-sm-12">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
			</div>
		</div>
		<div class="form-group row">
			<%= f.label :password, class: "col-sm-2 col-form-label" %>
			<div class="col-sm-12">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-12">
				<%= f.submit "Log in", class: "btn btn-primary btn-sm" %>
			</div>
		</div>
	<% end %>
	<div class="col-xs-4 offset-xs-4">
		[ <%= link_to "Cancel request and return to article listing", articles_path %> ]
	</div>
